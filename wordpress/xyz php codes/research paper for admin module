                <?php
                // Database connection parameters
                $servername = "127.0.0.1";
                $username = "admin";
                $password = "Sanchit@123";
                $database = "Indiacom";
                $port = 8889;

                try {
                    // Create connection
                    $conn = new PDO("mysql:host=$servername;port=$port;dbname=$database", $username, $password);
                    // Set the PDO error mode to exception
                    $conn->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);

                    // Prepare and execute the SQL statement
                    $stmt = $conn->prepare("SELECT * FROM researchpaper");
                    $stmt->execute();

                    // Fetch all rows as associative array
                    $rows = $stmt->fetchAll(PDO::FETCH_ASSOC);

                    foreach ($rows as $row) {
                        echo "<tr>";
                        // Echo all columns
                        foreach ($row as $key => $value) {
                            // Display download link for presentation path
                            if ($key === 'presentation_path' && !empty($value)) {
                                echo "<td><a href='{$value}' download>Presentation</a></td>";
                            }
                            // Display download link for plagiarism path
                            elseif ($key === 'plag_path' && !empty($value)) {
                                echo "<td><a href='{$value}' download>Plagiarism</a></td>";
                            }
                            // Display download link for document path
                            elseif ($key === 'document_path' && !empty($value)) {
                                echo "<td><a href='{$value}' download>Document</a></td>";
                            }
                            // Otherwise, just display the value
                            else {
                                echo "<td>{$value}</td>";
                            }
                        }
                        // Add update button
                        echo "<td><a href='adminupdate/?paper_id={$row['paper_id']}'>Update</a></td>"; 
                        echo "</tr>";
                    }
                } catch(PDOException $e) {
                    echo "Connection failed: " . $e->getMessage();
                }
                // Close the database connection
                $conn = null;
                ?>
            </tbody>
        </table>
